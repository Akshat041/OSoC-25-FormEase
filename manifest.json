{
  "manifest_version": 3,

  "name": "FormEase",
  "description": "Resize, compress, and convert files before uploading, directly in-browser.",
  "version": "1.1",
  "permissions": ["scripting", "activeTab"],
  
  "action": {
    "default_icon": "icons/logo.png",
    "default_title": "FormEase"
  },

  "background": {

  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "toolbox.html",
        "scripts/resize.js",
        "scripts/compress.js",
        "scripts/convert.js",
        "scripts/pica.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]

}
